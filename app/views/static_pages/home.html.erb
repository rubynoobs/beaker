<%= provide(:title, 'Home') %>

<div class="hero-unit text-center">
  <img src="/url.png">

  <%= form_tag components_path, method: 'get', class: 'form-search' do %>
    <div class="input-append">
      <%= text_field_tag :search, params[:search], class: 'span4 search-query', placeholder: 'Search components...', id: 'home_search' %>
      <%= button_tag 'Search', name: nil, class: 'btn' %>
    </div>
  <% end %>

</div>
